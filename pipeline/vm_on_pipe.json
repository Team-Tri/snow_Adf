{
	"name": "vm_on_pipe",
	"properties": {
		"activities": [
			{
				"name": "If Condition1",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "SetvariableVmstatus",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@equals(variables('status'),'VM deallocated')",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "startvmact",
							"type": "Custom",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"command": {
									"value": "python3 startvm.py",
									"type": "Expression"
								},
								"resourceLinkedService": {
									"referenceName": "snowstorelink",
									"type": "LinkedServiceReference"
								},
								"folderPath": "code",
								"referenceObjects": {
									"linkedServices": [],
									"datasets": []
								}
							},
							"linkedServiceName": {
								"referenceName": "batchtoadfnew",
								"type": "LinkedServiceReference"
							}
						}
					]
				}
			},
			{
				"name": "Execute checkvmstatus_pipe",
				"type": "ExecutePipeline",
				"dependsOn": [],
				"policy": {
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"pipeline": {
						"referenceName": "checkvmstatus_pipe",
						"type": "PipelineReference"
					},
					"waitOnCompletion": true
				}
			},
			{
				"name": "SetvariableVmstatus",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Execute checkvmstatus_pipe",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "",
					"value": {
						"value": "@activity('Execute checkvmstatus_pipe').output.pipeLineReturn.Vmstatus",
						"type": "Expression"
					}
				}
			}
		],
		"variables": {
			"Vmstatus": {
				"type": "String"
			}
		},
		"annotations": []
	}
}