{
	"name": "pipeline1",
	"properties": {
		"activities": [
			{
				"name": "check_vm_status",
				"description": "activity checks for Vm status",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"method": "GET",
					"url": {
						"value": "@concat('https://management.azure.com/subscriptions/',pipeline().parameters.SubscriptionId,'/resourceGroups/',pipeline().parameters.ResourceGroupName,'/providers/Microsoft.Compute/virtualMachines/',pipeline().parameters.VMName,'/InstanceView?api-version=2020-12-01')",
						"type": "Expression"
					}
				}
			}
		],
		"parameters": {
			"SubscriptionId": {
				"type": "string",
				"defaultValue": "a16f162e-e90e-4101-8d1d-89a715aa9104"
			},
			"ResourceGroupName": {
				"type": "string",
				"defaultValue": "snowteam2"
			},
			"Region": {
				"type": "string",
				"defaultValue": "eastus"
			},
			"VMName": {
				"type": "string",
				"defaultValue": "snowsample"
			},
			"Command": {
				"type": "string",
				"defaultValue": "Start"
			}
		},
		"annotations": []
	}
}