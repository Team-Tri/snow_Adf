{
	"name": "pipeline1",
	"properties": {
		"activities": [
			{
				"name": "check_vm_status",
				"description": "activity checks for Vm status",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "GET",
					"url": {
						"value": "@concat('https://management.azure.com/subscriptions/',pipeline().parameters.SubscriptionId,'/resourceGroups/',pipeline().parameters.ResourceGroupName,'/providers/Microsoft.Compute/virtualMachines/',pipeline().parameters.VMName,'/InstanceView?api-version=2024-03-01')",
						"type": "Expression"
					},
					"authentication": {
						"resource": "https://management.azure.com/",
						"credential": {
							"referenceName": "vmtoadf",
							"type": "CredentialReference"
						}
					}
				}
			},
			{
				"name": "If Condition1",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "check_vm_status",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@equals(activity('check_vm_status').output.statuses[1].displayStatus,'VM deallocated')",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "startvmact",
							"type": "Custom",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"command": {
									"value": "cmd /C python3 startvm.py",
									"type": "Expression"
								},
								"resourceLinkedService": {
									"referenceName": "AzureBlobStorage1",
									"type": "LinkedServiceReference"
								},
								"folderPath": "code",
								"referenceObjects": {
									"linkedServices": [],
									"datasets": []
								}
							},
							"linkedServiceName": {
								"referenceName": "batchtoadf",
								"type": "LinkedServiceReference"
							}
						}
					]
				}
			},
			{
				"name": "runvmscriptact",
				"type": "Custom",
				"state": "Inactive",
				"onInactiveMarkAs": "Succeeded",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"command": {
						"value": "python runscriptinvm.py",
						"type": "Expression"
					},
					"resourceLinkedService": {
						"referenceName": "AzureBlobStorage1",
						"type": "LinkedServiceReference"
					},
					"folderPath": "code",
					"referenceObjects": {
						"linkedServices": [],
						"datasets": []
					}
				},
				"linkedServiceName": {
					"referenceName": "batchtoadf",
					"type": "LinkedServiceReference"
				}
			}
		],
		"parameters": {
			"SubscriptionId": {
				"type": "string",
				"defaultValue": "a16f162e-e90e-4101-8d1d-89a715aa9104"
			},
			"ResourceGroupName": {
				"type": "string",
				"defaultValue": "snowteam2"
			},
			"Region": {
				"type": "string",
				"defaultValue": "eastus"
			},
			"VMName": {
				"type": "string",
				"defaultValue": "snowsample"
			},
			"Command": {
				"type": "string",
				"defaultValue": "Start"
			}
		},
		"annotations": []
	}
}